<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_customization.Order" t-inherit="pos_preparation_display.Order" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_pdis_stage')]" position="after">
           <div t-if="this.props.order.is_take_away">
               <div class=" o_pdis_stage py-1 px-3 rounded-pill" t-att-style="`background-color: ${this.stage.color} !important; color: ${this.fondColor}`">
                   Take Away
               </div>
           </div>

        </xpath>
    </t>
</templates>
