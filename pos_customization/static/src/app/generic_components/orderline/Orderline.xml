<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="posOrderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-price')]" position="replace">
            <div t-attf-class="product-price d-inline-block text-end price fw-bolder {{ line.comboParent ? 'child_line' : '' }}">
                <t t-if="line.price === 'free'">
                    Free
                </t>
                <t t-else="" t-esc="get_product_price(line)"/>
            </div>
        </xpath>
    </t>
</templates>